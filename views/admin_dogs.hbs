    <script src="../js/meet_the_dogs.js" type="text/javascript"></script>
</head>

<body>
    {{> navbar_admin}}
    <script>HighlightTabAdmin("see_dogs")</script>
    <div class="container" style="margin-top:50px!important;">
        <div class="row mt-5">
            <div class="col mt-5">
                <div id="search" class="filter-category delius ">
                    <form id="search-form" action="" method="POST" enctype="multipart/form-data">
                        <div class="input-group">
                            <input id="search-box" type="text" class="form-control" placeholder="Search for a name or a breed!" />
                            <span class="input-group-btn ml-3">
                                <button class="btn btn-block btn-primary bubblegumsans text-white" style="background: #6DAB3C!important;">Search!</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col mt-2">
            </div>
            <div class="w-100"></div>
            <div class="col mt-5">
                <div class="row">
                    <div class="col">
                        <div class="form-group delius">
                            <strong>Select Breed</strong>
                            <select data-filter="breed" class="filter-breed filter form-control">
                                <option value="">Show All</option>
                                <option value="Beagle">Beagle</option>
                                <option value="Corgi">Corgi</option>
                                <option value="Dachshund">Dachshund</option>
                                <option value="Golden Retriever">Golden Retriever</option>
                                <option value="Husky">Husky</option>
                                <option value="Schnauzer">Schnauzer</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group delius">
                            <strong>Select Gender</strong>
                            <select data-filter="gender" class="filter-gender filter form-control">
                                <option value="">Show All</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="w-100"></div>
                    <div class="col">
                        <div class="form-group delius">
                            <strong>Select Energy Level</strong>
                            <select data-filter="energy_level" class="filter-energy_level filter form-control">
                                <option value="">Show All</option>
                                <option value="high">High</option>
                                <option value="moderate">Moderate</option>
                                <option value=low>Low</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group delius">
                            <strong>Select Ease of Training</strong>
                            <select data-filter="ease_of_training" class="filter-ease_of_training filter form-control">
                                <option value="">Show All</option>
                                <option value="easy">Easy</option>
                                <option value="average">Average</option>
                                <option value="difficult">Difficult</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row mb-5 mt-3 bubblegumsans">
                    <span class="input-group-btn mx-auto">
                        <button id="reset-filter" type="button" class="btn btn-block btn-secondary" style="background: #6DAB3C!important;">Clear Filter and Search</button>
                    </span>
                </div>
            </div>
            <div class="col">
                <img class="ml-3" style="max-height: 98%!important; max-width: 98%!important;" src="../img/doggos.png" />
            </div>
        </div>
    </div>
    <!-- Cards -->
    <br><br>
    </div>
    <!-- Filter -->
    <hr>
    <br>
    <br>
    <!-- Team -->
    <section id="team" class="pb-5" style="margin-top: -6%;">
        <div class="container">
            <div class="container mb-5">
                <div class="row">
                    <div class="col">
                        <h1 class="bubblegumsans text-left text-brown mt-5">The Kennel</h1>
                    </div>
                    <div class="col mt-5">
                        <a href="admin_add_dog" class="custom-card">
                            <button class="btn btn-block btn-primary bubblegumsans text-white" style="background: #6DAB3C!important; width:150px!important;float: right;">Add Dog</button>
                        </a>
                    </div>
                </div>
                <div class="row">
                </div>
            </div>
            <div class="row gallery" id="gallery">
                <!--
            <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                    <div class="mainflip">
                        <div class="frontside">   
                            <div class="card">
                                <div class="card-body text-center">
                                    <img class="img-fluid" src="../img/dogpic.png" alt="add dog"/><br><br>
                                    <h4 class="card-title" style="display: inline">Add A Dog!</h4>
                                    <p class="card-text">for adoption!</p>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
-->
                <!-- Team member -->
                <div id="nodogsfound" class="bubblegumsans">
                    <div><span class="text-orange">Oops!</span> No dogs found!</div>
                </div>
                {{#each db}}
                <span data-id="{{_id}}" data-name="{{name}}" data-breed="{{breed}}" data-gender="{{gender}}" data-energy_level="{{energy_level}}" data-ease_of_training="{{ease_of_training}}" class="col-xs-12 col-sm-6 col-md-4  product">
                    <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                        <div class="mainflip">
                            <div class="frontside">
                                <div class="card">
                                    <div class="card-body text-center {{status}}">
                                        <img class="img-fluid" src="../uploads/{{image}}" onerror="this.onerror=null;this.src='../img/dog-not-found.png';" alt="card image" />
                                        {{#ifCond status "==" "adopted"}}
                                        <img class="adopted-badge" src="../img/adoptedBone.png">
                                        {{/ifCond}}
                                        <br><br>
                                        <h4 class="bubblegumsans card-title text-brown" style="display: inline">{{name}}</h4>
                                        <img src="../img/{{gender}}.png" style="height:20px; width: 20px; display: inline" />
                                        <p class="bubblegumsans card-text text-brown">the {{breed}}</p>
                                        <p class="cabin card-text text-brown">Energy Level: <img src="../img/{{energy_level}}.png" style="margin-top: -15px; height:20px; width: 70px;" /></p>
                                    </div>
                                </div>
                            </div>
                            <div class="backside">
                                <div class="card">
                                    <div class="card-body text-center {{status}}">
                                        <img src="../uploads/{{image}}" alt="card image" onerror="this.onerror=null;this.src='../img/dog-not-found.png';" style="height: 36%;">
                                        {{#ifCond status "==" "adopted"}}
                                        <img class="adopted-badge" src="../img/adoptedBone.png">
                                        {{/ifCond}}
                                        <h4 class="card-title">{{name}}</h4>
                                        <p class="card-text" style="text-align: justify">{{description}}</p>
                                        <button class="cabin edit btn btn-primary" data-id="{{_id}}" style="background: #6DAB3C!important;">Edit Dog Info</button>
                                        <button class="btn btn-primary btn-danger delete cabin" data-id="{{_id}}"><span class="fa fa-window-close"></span> Remove me!</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </span>
                {{/each}}
            </div>
        </div>
    </section>
