    <meta name="author" content="">
    <!--  title details    -->
    <title>PAWSter Care Admin</title>
    <link rel="shortcut icon" type="image/x-icon" href="../img/logo.png" />
    <!-- BootstrapCDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- JavaScript -->
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.4/build/alertify.min.js"></script>
    <!-- Alertify CDN  -->
    <!-- CSS -->
    <link rel="stylesheet" href="http://cdn.jsdelivr.net/npm/alertifyjs@1.11.4/build/css/alertify.min.css" />
    <!-- Default theme -->
    <link rel="stylesheet" href="http://cdn.jsdelivr.net/npm/alertifyjs@1.11.4/build/css/themes/default.min.css" />
    <!-- data tables -->
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/select/1.3.0/css/select.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/select/1.3.0/js/dataTables.select.min.js" type="text/javascript"></script>
    <!-- custom CSS -->
    <link href="../css/PAWSter%20Care.css" rel="stylesheet">
    <link href="../css/admin_tables.css" rel="stylesheet">
    <!-- custom js -->
    <script src="../js/PAWSter%20Care.js" type="text/javascript"></script>
    <script src="../js/admin_tables.js" type="text/javascript"></script>
    <script src="../js/admin_feedback.js" type="text/javascript"></script>
</head>

<body>
    {{> navbar_admin}}
    <script>HighlightTabAdmin("feedback_data")</script>
    <br><br>
    <div class="cabin">
        <div style="background: url(../img/requestsAdmin.jpg) no-repeat; background-size: cover; height: 500px"><br><br>
            <h1 class="bubblegumsans" style="width: 30%; margin-top: 150px; text-align: center; color: #F1EAEA; font-size:70px!important;">Feedback Data</h1><br>
        </div>
        <div class="table-container">
            <table id="FeedbackTable" class="display" style="width=100%">
                <thead>
                    <tr>
                        <td>Select</td>
                        <td>First Name</td>
                        <td>Last Name</td>
                        <td>Email Address</td>
                        <td>Feedback Text</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each feedbacks}}
                    <tr data-id="{{_id}}">
                        <td><input id="{{_id}}" data-id="{{_id}}" type="checkbox" class="checkBox" name="checkBox" value="{{_id}}" /></td>
                        <td>{{fName}}</td>
                        <td>{{lName}}</td>
                        <td>{{eMail}}</td>
                        <td>{{fText}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <button id="deleteRow" class="btn btn-primary btn-danger delete cabin"><span class="fa fa-window-close"></span> Delete Row/s</button>
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
    <script src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'></script>
    <script src="../js/admin_feedback.js"></script>
    <form action="delete-feedback" id="deleteform" method="post">
        <!-- just for the javascript function-->
        <input type="hidden" name="id" id="deleteid">
    </form>
</body>

</html>