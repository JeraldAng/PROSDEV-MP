<body>
    <!-- Navigation -->
    {{> navbar}}
    <script>HighlightTab("profile")</script><br><br><br><br>
    <div class="container contact">
        <div class="form-container">
            <div class="form-body">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <form action="feedbackform" id="feedback_form" method="post" class="needs-validation">
                                <div class="contact-form">
                                    <div class="form-group mt-3">
                                        <label class="control-label bubblegumsans text-brown" for="fname">First Name<span style="color:red">*</span></label>
                                        <div class="">
                                            <input type="text" class="form-control" id="fname" placeholder="Enter First Name" name="fname" name="reqfname" required>
                                            <div class="invalid-feedback" id="invalid-fname">You need to fill up this field.</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label bubblegumsans text-brown" for="lname">Last Name<span style="color:red">*</span></label>
                                        <div class="">
                                            <input type="text" class="form-control" id="lname" placeholder="Enter Last Name" name="lname" name="reqlname" required>
                                            <div class="invalid-feedback" id="invalid-lname">You need to fill up this field.</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label bubblegumsans text-brown" for="email">Email<span style="color:red">*</span></label>
                                        <div class="">
                                            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" name="reqemail" required>
                                            <div class="invalid-feedback" id="invalid-email">Please choose a valid email address.</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label bubblegumsans text-brown" for="comment">Your Feedback<span style="color:red">*</span></label>
                                        <div class="">
                                            <textarea form="feedback_form" class="form-control" rows="5" id="comment" placeholder="Enter feedback" name="ftext" name="reqfeedback" required></textarea>
                                            <div class="invalid-feedback">You need to fill up this field.</div>
                                        </div>
                                    </div>
                                    <div class="form-group col-12">
                                        <button id="submit-btn" type="submit" class="btn btn-outline-primary btn-block bubblegumsans mb-2" style="width: 500px;">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col mt-2" style="position: relative;">
                            <h1 class="bubblegumsans text-brown text-right mr-4">Contact Us</h1>
                            <h2 class="caveat text-brown text-right mr-4">We would love to hear your feedback!</h2>
                            <img src="../img/dog-contact-us.png" class="col-sm-12" style="border-radius:5px; position: absolute; bottom: 0px;font-size: 18px; " />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> footer}}
</body>

