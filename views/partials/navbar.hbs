                                <div class="input-group-append">
                                        <button type="button" id ="showPasswordBtn" class="password input-group-text">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-center links" style="margin-top: 10px!important;">
