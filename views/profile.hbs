    <body>
    
<!-- Navigation -->
    {{> navbar}}
    <script>HighlightTab("editprofile")</script>
        
    <div class="container emp-profile">
      <div class="row">
          <div class="col-md-4">
              <div class="profile-img">
                  <img src="https://www.prestigeanimalhospital.com/sites/default/files/styles/large/adaptive-image/public/golden-retriever-dog-breed-info.jpg?itok=scGfz-nI" alt="user icon"/>
              </div>
          </div>
          <div class="col-7">
              <div class="profile-head">
                <h1 class="bubblegumsans">My Profile</h1><br>      
                <div class = "user-data cabin">
                    <span style="font-size: 25px;">Username: {{username}}</span><br>
                    <span style="font-size: 25px;">Email: {{email}}</span><br>
                </div><br>       
                <a href="editprofile"><button id="editprofile" class="btn btn-outline-primary btn-block bubblegumsans mb-2" style="width: 500px;">Edit Profile</button></a> 
              </div>
          <br>    
        </div>
      </div><br>
        
        <!-- requests -->
        <table class="table table-condensed cabin">
    				<thead>
						<tr class="request-header">
                            <th style="width:25%" class="text-center">Date</th>
							<th style="width:25%" class="text-center">Dog Name</th>
							<th style="width:25%" class="text-center">Dog Breed</th>
							<th style="width:25%" class="text-center">Status</th>
						</tr>
					</thead>
					<tbody>
                        {{#each reqList}}
						<tr id="user-table-data" class="{{reqStatus}} text-center">
							<td class="reqDate" data-th="reqDate">{{reqDate}}</td>  
                            <td data-th="reqDog">{{reqDog}}</td>
                            <td data-th="reqBreed">{{reqBreed}}</td>
							<td class="reqStatus" data-th="">{{reqStatus}}</td>     
                        </tr>
                        {{/each}}
					</tbody>
					
        </table>
  </div>
    <br><br>
{{> footer}}