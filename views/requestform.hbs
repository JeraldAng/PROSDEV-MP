<body>
<!-- Navigation -->
{{> navbar}}
    <script>HighlightTab("profile")</script><br><br><br>
    
<div class="container">
    <br>
	<div class="col-lg-12 paper-bg" id="source-html">
        <h1 class="well text-center">Dog Adoption Form</h1><br>
        <img class="clip" src="../img/clip.png"/>
	<div class="row">
				<form method="post" action="request">
					<div class="col-sm-12">
						<div class="row">
							<div class="col-sm-3 form-group">
								<label>First Name </label>
								<input type="text" placeholder="First Name" class="form-control" name="reqfirst" required oninvalid="alert('You must fill out first name!')">
                            </div>
                            
							<div class="col-sm-3 form-group">
								<label>Last Name </label>
								<input type="text" placeholder="Last Name" class="form-control" name="reqlast" required oninvalid="alert('You must fill out last name!')">
							</div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2 form-group">
                                <label>Phone Number </label>
                                <input type="text" placeholder="Phone Number.." class="form-control" name="reqnum" required oninvalid="alert('You must fill out phone number!')">
                            </div>
                             <div class="col-sm-4 form-group">
                                <label>Email Address </label>
                                <input type="text" placeholder="Email Address" class="form-control" name="reqemail" value="{{email}}" required oninvalid="alert('You must fill out the email address!')" readonly="readonly">
                            </div>	
                        </div>
                        
						<div class="form-group">
							<label>Address </label>
                            <textarea placeholder="Address" rows="3" class="form-control" name="reqaddress" required></textarea>
                            
                            <div class="col-sm-4 form-group">
                                <input type="text" placeholder="Dog Name.." class="form-control" value="{{dog.name}}" name="reqdog" required readonly="readonly">
							</div>
                        </div>
					</div>
                        <label>&nbsp;&nbsp;Terms and Conditions</label>
                        <p style="padding-left: 10px">
                            By sending this electronically, I agree to the terms and conditions listed under <a href="protocols">PROTOCOLS</a>.<br><br>
                    &nbsp;
                    <input type="submit" class="btn btn-lg btn-info" value="Submit Request" onCLick="myFunction()">
				</form> 
				</div>
	   </div>
    </div>
    <br><br>
